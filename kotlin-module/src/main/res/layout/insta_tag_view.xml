<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/angle_left"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:background="@drawable/tag_triangle_left"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/angle_top"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:background="@drawable/tag_triangle_top"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/tag_text_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_corner_square_box"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="13dp"
                android:paddingTop="6dp"
                android:paddingRight="13dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/tag_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxWidth="80dp"
                    android:maxLines="2"
                    android:minWidth="30dp"
                    android:padding="@dimen/dp5"
                    android:text="태그"
                    android:textColor="#000000"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/angle_bottom"
                android:layout_width="@dimen/dp22"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:background="@drawable/tag_triangle_bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/angle_right"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp20"
            android:background="@drawable/tag_triangle_right"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" />
    </LinearLayout>

    <com.kbline.kotlin_module.InstagramTagItem.TagImageView
        android:id="@+id/remove_tag_image_view"
        android:layout_width="@dimen/dp18"
        android:layout_height="@dimen/dp18"
        android:layout_gravity="right|center_vertical|center_horizontal|center|end"
        android:layout_marginEnd="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp15"
        android:background="@drawable/ic_remove_tag"
        android:visibility="gone" />
</FrameLayout>
