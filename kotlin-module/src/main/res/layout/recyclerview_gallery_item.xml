<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.percentlayout.widget.PercentRelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="1.5dp">
        <RelativeLayout android:orientation="vertical"  app:layout_aspectRatio="100%" app:layout_widthPercent="100%">
            <ImageView android:id="@+id/recyclerView_item_ImageView" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
            <View android:id="@+id/recyclerView_item_Layout" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
    </androidx.percentlayout.widget.PercentRelativeLayout>
</RelativeLayout>
