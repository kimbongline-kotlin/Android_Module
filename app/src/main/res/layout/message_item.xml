<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@color/whiteColor">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" android:id="@+id/dateline" android:visibility="gone">

        <View
            android:id="@+id/view30"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="#eeeeee" />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dateLabel"
                android:layout_centerInParent="true" android:background="@color/whiteColor"
                android:padding="@dimen/dp5" android:textSize="12sp" android:textColor="#4e4e4e"/>
    </RelativeLayout>

    <com.kbline.kotlin_module.HashTagUtil.HashTagView
        android:id="@+id/myText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/my_chat_message_layer"
        android:gravity="right|center_vertical|center_horizontal|center"
        android:maxWidth="250dp"
        android:minWidth="50dp"
        android:minHeight="45dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="abc"
        android:textColor="@color/titleColor"
        android:visibility="gone"
        app:atColor="@color/heartColor"
        app:hashTagColor="@color/heartColor" />

    <com.kbline.kotlin_module.HashTagUtil.HashTagView android:textColor="@color/titleColor"
                                                                    android:gravity="center_vertical"
                                                                    android:layout_gravity="left"
                                                                    android:id="@+id/userText"
                                                                    android:background="@drawable/user_chat_message_layer"
                                                                    android:paddingLeft="15dp" android:paddingTop="10dp"
                                                                    android:paddingRight="15dp"
                                                                    android:paddingBottom="10dp"
                                                                    android:visibility="gone"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_marginLeft="15dp"
                                                                    android:layout_marginTop="5dp"
                                                                    android:layout_marginRight="15dp"
                                                                    android:layout_marginBottom="5dp"
                                                                    android:maxWidth="250dp" android:minWidth="50dp"
                                                                    android:minHeight="45dp"
                                                                    android:text=""
                                                                    app:atColor="@color/heartColor"
                                                                    app:hashTagColor="@color/heartColor"/>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/uDateLabel" android:padding="3dp"
            android:textSize="10sp" android:textColor="#4e4e4e" android:layout_marginLeft="@dimen/dp15"
            android:visibility="gone"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mDateLabel" android:padding="3dp"
            android:textSize="10sp" android:textColor="#4e4e4e" android:gravity="right"
            android:layout_marginRight="@dimen/dp15" android:visibility="gone"/>
</LinearLayout>
